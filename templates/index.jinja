{% extends 'base.html' %}
{% block title %}{{ _('Werkzeugk√§stchen') }}{% endblock %}
{% block page_title %}{{ _('Werkzeugk√§stchen') }}{% endblock %}
{% block content %}

    <input class="search" type="text" id="searchInput" placeholder="{{ _('üîç Suche nach einem Tool...') }}" onkeyup="filterTools()">

    <div class="row" id="toolsContainer">
        {% for tool in toolsToRender %}
            <div class="col-md-4 mb-4 tool-card" data-title="{{ tool.name }}" data-description="{{ tool.description }}">
                <a href="{{ url_for('tool_form', tool_name=tool.__class__.__name__) }}">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ tool.name }}</h5>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}

    </div>
{% endblock %}